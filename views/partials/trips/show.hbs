<div class= "page-content">
	<h1>Current Trip</h1>
	{{!-- {{trip}} --}}
	<div id = "trip-show"></div>
	<br>
	<h3>Rider ID: {{trip.riderId}} </h3>
	<h3>Driver ID: {{trip.driverId}}</h3>
	<h3>Trip From: {{trip.toLocation}}</h3>
	<h3>Trip To: {{trip.fromLocation}}</h3>

	<script id = "show-trip" type="text/x-handlebars-template">
			\{{#each trips}}
			<div id="\{{_id}}" class="trip trip-card">
				<p class="trip-attribute">\{{trips.fromLocation}}</p>
				<p class="trip-attribute">\{{trips.toLocation}}</p>
			</div>
		\{{/each}}
		</script>
		<button onsubmit="hitcher.endtrip">We're Here</button>	 
</div>
<script>hitcher.showTrip({{{trips}}})</script>
