<div class= "page-content">
	<h1>Current Trip</h1>
	<div id="trip-show"></div>
	<br>
	<script id="show-trip" type="text/x-handlebars-template">
			<div id="\{{trips._id}}" class="trip trip-card">
				<p class="trip-attribute">DRIVER:</p>
				<span id="driver-info"><img class="avatar-image" src="\{{driver.imageUrl}}">\{{driver.name}}</span>
				<p class="trip-attribute">RIDER:</p>
				<span id="rider-info"><img class="avatar-image" src="\{{rider.imageUrl}}">\{{rider.name}}</span>
				<p class="trip-attribute">FROM: \{{trips.fromLocation}}</p>
				<p class="trip-attribute">TO: \{{trips.toLocation}}</p>
			</div>
	</script>

		<button onsubmit="hitcher.endtrip">We're Here</button>

		<form onsubmit="hitcher.updateTrip(event)">
		  <input type="number" name="fromLocation" placeholder="From Zipcode" required>
		  <input type="number" name="toLocation" placeholder="To Zipcode" required>
		  <input type="submit">
		</form>

		<button class="deleteButton" onclick="hitcher.deleteTrip()">Delete</button>

</div>
<script>hitcher.showTrip({{{trip}}}, {{{rider}}}, {{{driver}}})</script>
